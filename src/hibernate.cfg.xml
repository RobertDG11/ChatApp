<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>

    <!-- JDBC Database connection settings -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://192.168.99.100:6603/chatapp?verifyServerCertificate=false&amp;useSSL=true</property>
    <property name="connection.username">root</property>
    <property name="connection.password">110596</property>

    <!-- JDBC connection pool settings ... using built-in test pool -->
    <property name="connection.pool_size">1</property>

    <!-- Select our SQL dialect -->
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

    <!-- Echo the SQL to stdout -->
    <property name="show_sql">true</property>

    <!-- Set the current session context -->
    <property name="current_session_context_class">thread</property>

    <mapping class="com.robert.chatapp.Entity.User"/>
    <mapping class="com.robert.chatapp.Entity.Group"/>
    <mapping class="com.robert.chatapp.Entity.UserGroup"/>
    <mapping class="com.robert.chatapp.Entity.UserType"/>
    <mapping class="com.robert.chatapp.Entity.Privilege"/>
    <mapping class="com.robert.chatapp.Entity.Notification"/>
    <mapping class="com.robert.chatapp.Entity.Message"/>

</session-factory>

</hibernate-configuration>